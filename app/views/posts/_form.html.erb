<% provide(:title, 'New post') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :body %>
      <%= f.text_area :body %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit "Create new post", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
